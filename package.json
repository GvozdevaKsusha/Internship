  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "bcrypt": "^5.1.1",
    "express": "^4",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-ui5-tooling": "^1.16.3",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-sales_front": "cds watch --open sales_front/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-order_list": "cds watch --open order_list/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy sales --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic",
        "users": {
          "User1": {
            "password": "1111",
            "roles": [
              "user"
            ]
          }
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/sales_front",
    "app/order_list"
  ]
}
